<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGrey"
    android:weightSum="1">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonPlayAgain"
        android:id="@+id/buttonPlayAgain"
        android:textSize="25sp"
        android:visibility="visible"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/frameLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/playerOScore"
        android:id="@+id/plyaerOScoreTextView"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_above="@+id/buttonPlayAgain"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/playerO"
        android:id="@+id/playerOTextView"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_below="@+id/playerXTextView"
        android:layout_alignLeft="@+id/playerXTextView"
        android:layout_alignStart="@+id/playerXTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/playerXScore"
        android:id="@+id/playerXScoreTextView"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_above="@+id/plyaerOScoreTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/playerX"
        android:id="@+id/playerXTextView"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/playerXScoreTextView"
        android:layout_toRightOf="@+id/frameLayout"
        android:layout_toEndOf="@+id/frameLayout"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/playerXWin"
        android:id="@+id/winnerTextView"
        android:textColor="@color/white"
        android:textSize="60dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_above="@+id/playerXScoreTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="34dp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/playerXMove"
        android:id="@+id/messageTextView"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/playerXScoreTextView"
        android:layout_toStartOf="@+id/playerXScoreTextView"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/messageTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/winnerTextView"
        android:layout_toStartOf="@+id/winnerTextView"
        android:id="@+id/frameLayout">

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageButton00"
            android:layout_gravity="left|top"
            android:src="@drawable/space" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageButton01"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/space" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageButton10"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/space" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageButton02"
            android:layout_gravity="right|top"
            android:src="@drawable/space" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageButton11"
            android:layout_gravity="center"
            android:src="@drawable/space" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageButton12"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/space" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageButton20"
            android:layout_gravity="left|bottom"
            android:src="@drawable/space" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageButton21"
            android:layout_gravity="center_horizontal|bottom"
            android:src="@drawable/space" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageButton22"
            android:layout_gravity="right|bottom"
            android:src="@drawable/space" />
    </FrameLayout>

</RelativeLayout>